<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:orientation="vertical"
    tools:context="com.kelompok13.biografisahabat.activity.TambahBiografiActivity2">

    <EditText
        android:id="@+id/etNamaBiografi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nama Biografi"/>

    <EditText
        android:id="@+id/etJulukanBiografi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:hint="Julukan Biografi"/>

    <EditText
        android:id="@+id/etIsiBiografi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:hint="Isi Biografi"/>

    <Button
        android:id="@+id/btnSimpanBiografi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="SIMPAN DATA"/>
</LinearLayout>
